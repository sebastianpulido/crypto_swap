{
  "name": "1inch-crosschain-swap-extension",
  "version": "1.0.0",
  "description": "Cross-chain atomic swap extension for 1inch Fusion+ enabling Ethereum-Bitcoin-Dogecoin swaps",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:bitcoin": "mocha test/BitcoinAtomicSwap.test.js",
    "test:dogecoin": "mocha test/DogecoinAtomicSwap.test.js",
    "test:all": "npm run test && npm run test:bitcoin && npm run test:dogecoin",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run start\" \"cd frontend && npm start\"",
    "install-all": "npm install && cd frontend && npm install",
    "fusion:setup": "node scripts/setup-fusion.js"
  },
  "keywords": [
    "1inch",
    "fusion+",
    "cross-chain",
    "atomic-swap",
    "bitcoin",
    "dogecoin",
    "ethereum",
    "defi"
  ],
  "author": "1inch Cross-chain Team",
  "license": "MIT",
  "dependencies": {
    "@1inch/fusion-sdk": "^2.0.0",
    "axios": "^1.5.0",
    "bitcoinjs-lib": "^6.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "web3": "^4.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "chai": "^4.3.7",
    "concurrently": "^8.2.2",
    "hardhat": "^2.22.0",
    "mocha": "^10.2.0"
  }
}
